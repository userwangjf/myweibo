<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weibo_bottombar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="null"
        android:background="@color/weibo_bottombar_top_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/weibo_bottombar_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weibo_tabbar_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weibo_bottombar_home_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/weibo_tabbar_home_click"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/home_bottombar_font"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/home_layout"
                android:layout_alignRight="@+id/home_layout"
                android:layout_alignTop="@+id/home_layout"
                android:src="@drawable/weibo_tabbar_default_dot"
                android:contentDescription="null"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weibo_tabbar_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/weibo_tabbar_message_click"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/home_bottombar_font"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/message_layout"
                android:layout_alignRight="@+id/message_layout"
                android:layout_alignTop="@+id/message_layout"
                android:src="@drawable/weibo_tabbar_default_dot"
                android:contentDescription="null"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weibo_tabbar_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_compose_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/weibo_tabbar_compose_click"
                android:scaleType="center"
                android:contentDescription="null"
                android:src="@drawable/weibo_tabbar_compose_add" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tv_discovery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weibo_tabbar_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discovery_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/weibo_tabbar_discover_click"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/home_bottombar_font"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/discovery_layout"
                android:layout_alignRight="@+id/discovery_layout"
                android:layout_alignTop="@+id/discovery_layout"
                android:src="@drawable/weibo_tabbar_default_dot"
                android:contentDescription="null"
                android:visibility="gone" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tv_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/weibo_tabbar_bg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/weibo_tabbar_profile_click"
                android:gravity="center"
                android:text="我"
                android:textColor="@color/home_bottombar_font"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/profile_layout"
                android:layout_alignRight="@+id/profile_layout"
                android:layout_alignTop="@+id/profile_layout"
                android:src="@drawable/weibo_tabbar_default_dot"
                android:contentDescription="null"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>